@model TheGioiDiaMVC.ViewModels.HoSoVM
@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 account-sidebar rounded-start">
            <h6 class="text-uppercase px-3 pt-3">Cài đặt tài khoản</h6>
            <a class="active" href="http://localhost:7001/Admin/ThongTinAdmin/Index">Thông tin cá nhân</a>
            <a asp-action="DoiMatKhauAdmin">Đổi mật khẩu</a>
            <a href="#">Hướng dẫn sử dụng</a>
            <a href="#">Cài đặt giao diện</a>
        </div>

        <!-- Info content -->
        <div class="col-md-9">
            <div class="info-box">
                <h4 class="mb-4">Thông tin cá nhân</h4>
                @{
                    var thongBao = Context.Request.Query["thongBao"].ToString();
                }
                @if (thongBao == "capnhatthanhcong")
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> Cập nhật thông tin thành công!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (thongBao == "doimatkhauthanhcong")
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> Đổi mật khẩu thành công!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <div class="info-item">
                    <div class="info-label">Họ tên</div>
                    <div class="info-value">@Model.HoTen</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Ngày sinh</div>
                    <div class="info-value">@Model.NgaySinh.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="info-item">
                    <div class="info-label">Email</div>
                    <div class="info-value">@Model.Email</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Số điện thoại</div>
                    <div class="info-value">@Model.DienThoai</div>
                </div>

                <div class="info-item">
                    <div class="info-label">Địa chỉ</div>
                    <div class="info-value">@Model.DiaChi</div>
                </div>

                <div class="info-item mt-4">
                    <div class="info-label">Ảnh đại diện</div>
                    <img src="~/Hinh/Others/@Model.Hinh" class="img-thumbnail mt-2" style="max-width: 150px;" alt="Ảnh đại diện">
                </div>
                <div class="text-end mt-4">
                    <a asp-action="HoSoAdmin" class="btn btn-success px-4 py-2 rounded-pill">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa thông tin
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    body {
        background-color: #555555;
        color: #555555;
    }

    .account-sidebar {
        background-color: #e6edf3;
        border-right: 1px solid #e6edf3;
        height: 100%;
        min-height: 400px;
    }

        .account-sidebar a {
            display: block;
            padding: 12px 20px;
            color: #161b22;
            text-decoration: none;
            border-left: 4px solid transparent;
        }

            .account-sidebar a.active,
            .account-sidebar a:hover {
                background-color: #CC99FF;
                border-left: 4px solid #2f81f7;
                color: #000000;
            }

    .info-box {
        background-color: #e6edf3;
        padding: 24px;
        border-radius: 8px;
        border: 1px solid #CC99FF;
    }

    .info-item {
        padding: 10px 0;
        border-bottom: 1px solid #CC99FF;
    }

        .info-item:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: bold;
        color: #161b22;
    }

    .info-value {
        color: #161b22;
        margin-top: 4px;
    }
</style>