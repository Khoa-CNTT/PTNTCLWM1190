
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <h1 class="mb-4">📊 Dashboard</h1>

    <!-- Row 1: Cards Summary -->
    <div class="row">
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x text-primary"></i>
                    <h5 class="mt-2">Tổng sản phẩm</h5>
                    <h3>40</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-3x text-success"></i>
                    <h5 class="mt-2">Đơn hàng hôm nay</h5>
                    <h3>8</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-warning"></i>
                    <h5 class="mt-2">Khách hàng mới</h5>
                    <h3>10</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign fa-3x text-danger"></i>
                    <h5 class="mt-2">Doanh thu hôm nay</h5>
                    <h3>$5,200</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Row 2: Charts -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5>📈 Doanh thu tháng</h5>
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5>🛒 Đơn hàng theo trạng thái</h5>
                    <canvas id="ordersChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx1 = document.getElementById('revenueChart').getContext('2d');
        var revenueChart = new Chart(ctx1, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Doanh thu ($)',
                    data: [3000, 4000, 3500, 5000, 4500, 5200],
                    borderColor: 'blue',
                    borderWidth: 2,
                    fill: false
                }]
            }
        });

        var ctx2 = document.getElementById('ordersChart').getContext('2d');
        var ordersChart = new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: ['Hoàn thành', 'Chờ xử lý', 'Hủy'],
                datasets: [{
                    data: [60, 30, 10],
                    backgroundColor: ['green', 'orange', 'red']
                }]
            }
        });
    </script>
}
