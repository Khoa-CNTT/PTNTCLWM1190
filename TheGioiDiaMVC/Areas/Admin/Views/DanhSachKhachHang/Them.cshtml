@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model TheGioiDiaMVC.Data.KhachHang

@{
    ViewData["Title"] = "Thêm Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="mb-4">Thêm người dùng</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <form method="post" asp-action="Them">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MaKh" class="control-label">Mã khách hàng</label>
                        <input asp-for="MaKh" class="form-control" />
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="HoTen" class="control-label">Họ tên</label>
                        <input asp-for="HoTen" class="form-control" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="DienThoai" class="control-label">Điện thoại</label>
                        <input asp-for="DienThoai" type="tel" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                        <textarea asp-for="DiaChi" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="control-label">Giới Tính</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="true" id="Nam" />
                            <label class="form-check-label" for="Nam">Nam</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="GioiTinh" value="false" id="Nu" />
                            <label class="form-check-label" for="Nu">Nữ</label>
                        </div>
                    </div>
                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="HieuLuc" id="HieuLuc" />
                        <label class="form-check-label" for="HieuLuc">@Html.DisplayNameFor(model => model.HieuLuc)</label>
                    </div>
<div class="form-group">
    <label asp-for="VaiTro" class="control-label">Vai trò</label>
    <select asp-for="VaiTro" class="form-control">
        <option value="0">Khách hàng</option>
        <option value="1">Admin</option>
        <option value="2">Nhân viên</option>
    </select>
    <span asp-validation-for="VaiTro" class="text-danger"></span>
</div>

                    <div class="form-group mb-3">
                        <label asp-for="RandomKey" class="control-label"></label>
                        <input asp-for="RandomKey" class="form-control" />
                        <span asp-validation-for="RandomKey" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">Thêm</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Quay Lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
