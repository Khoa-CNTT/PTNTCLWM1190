@model TheGioiDiaMVC.Data.Loai
@{
    ViewData["Title"] = "Sửa loại";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2 class="text-center mb-4 text-success">Sửa Loại</h2>

<form asp-action="SuaLoai" enctype="multipart/form-data" method="post" class="shadow p-4 rounded-3 bg-light">
    <input type="hidden" asp-for="MaLoai" />

    <div class="mb-3">
        <label asp-for="TenLoai" class="form-label">Tên Loại</label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Hình hiện tại:</label><br />
        @if (!string.IsNullOrEmpty(Model.Hinh))
        {
            <img src="~/Hinh/Loai/@Model.Hinh" alt="Hình loại" class="img-thumbnail" style="max-width: 150px;" />
        }
        else
        {
            <p class="text-muted fst-italic">Chưa có hình</p>
        }
    </div>

    <div class="mb-3">
        <label for="HinhUpload" class="form-label">Chọn hình mới (nếu muốn thay đổi)</label>
        <input type="file" name="HinhUpload" class="form-control" />
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Loai" class="btn btn-secondary">Quay lại</a>
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
