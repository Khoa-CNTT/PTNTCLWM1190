@model TheGioiDiaMVC.Data.NhaCungCap

@{
    ViewData["Title"] = "Thêm Nhà Cung Cấp";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2 class="text-center text-success mb-4">➕ Thêm Nhà Cung Cấp</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form method="post" asp-action="ThemNhaCungCap" class="bg-light shadow rounded-4 p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="MaNcc" class="form-label">Mã Nhà Cung Cấp</label>
                <input asp-for="MaNcc" class="form-control" />
                <span asp-validation-for="MaNcc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TenCongTy" class="form-label">Tên Công Ty</label>
                <input asp-for="TenCongTy" class="form-control" />
                <span asp-validation-for="TenCongTy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Logo" class="form-label">Logo (Tên File)</label>
                <input asp-for="Logo" class="form-control" placeholder="Nhập tên file nếu không upload" />
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NguoiLienLac" class="form-label">Người Liên Lạc</label>
                <input asp-for="NguoiLienLac" class="form-control" />
                <span asp-validation-for="NguoiLienLac" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DienThoai" class="form-label">Điện Thoại</label>
                <input asp-for="DienThoai" class="form-control" />
                <span asp-validation-for="DienThoai" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DiaChi" class="form-label">Địa Chỉ</label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label">Mô Tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="NhaCungCap" class="btn btn-outline-secondary rounded-pill px-4">Quay lại</a>
                <button type="submit" class="btn btn-success rounded-pill px-4">Thêm</button>
            </div>
        </form>
    </div>
</div>
