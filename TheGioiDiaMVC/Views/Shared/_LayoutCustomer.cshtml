<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <title>CD LOOP</title>
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">

    @RenderSection("Styles", required: false)
</head>
<body>
    <div>
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3">
                            <i class="fas fa-map-marker-alt me-2 text-secondary"></i>
                            <a href="#" class="text-white">Đà Nẵng</a>
                        </small>
                        <small class="me-3">
                            <i class="fas fa-envelope me-2 text-secondary"></i>
                            <a href="#" class="text-white">cdloop@gmail.com</a>
                        </small>
                    </div>
                    <div class="top-link pe-2">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="text-white me-3">Xin chào, @User.Identity.Name</span>
                            <a asp-controller="KhachHang" asp-action="DangXuat" class="text-white">
                                <small class="text-white ms-2">Đăng xuất</small>
                            </a>
                        }
                        else
                        {
                            <a asp-controller="KhachHang" asp-action="DangKy" class="text-white">
                                <small class="text-white mx-2">Đăng ký</small>/
                            </a>
                            <a asp-controller="KhachHang" asp-action="DangNhap" class="text-white">
                                <small class="text-white ms-2">Đăng nhập</small>
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a asp-controller="Home" asp-action="Index" class="navbar-brand">
                        <h1 class="text-primary display-6">CD LOOP</h1>
                    </a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        <div class="navbar-nav mx-auto">
                            <a asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Trang chủ</a>
                            <a asp-controller="HangHoa" asp-action="Index" class="nav-item nav-link">Cửa hàng</a>
                            <a asp-controller="DiaHiem" asp-action="Index" class="nav-item nav-link">Rao tin CD</a>
                            <a asp-controller="LienHe" asp-action="Index" class="nav-item nav-link">Liên hệ</a>
                            <a asp-controller="GioiThieu" asp-action="Index" class="nav-item nav-link">Giới thiệu</a>
                        </div>
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal">
                                <i class="fas fa-search text-primary"></i>
                            </button>
                            @await Component.InvokeAsync("Cart")
                            <div class="dropdown my-auto">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <!-- Icon User và Dropdown -->
                                    <a class="dropdown-toggle my-auto" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fas fa-user fa-2x"></i>
                                        </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow rounded-4 p-2 border-0" style="min-width: 230px; background-color: #f8f9fa;">
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2 py-2 rounded-3 fw-medium hover-item"
                                               asp-controller="KhachHang" asp-action="Thongtincanhan">
                                                <i class="bi bi-person-circle fs-5 text-success"></i> Thông tin cá nhân
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item d-flex align-items-center gap-2 py-2 rounded-3 fw-medium hover-item"
                                               asp-controller="KhachHang" asp-action="DangXuat">
                                                <i class="bi bi-box-arrow-right fs-5 text-danger"></i> Đăng xuất
                                            </a>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <!-- Link Đăng Nhập -->
                                    <a asp-controller="KhachHang" asp-action="DangNhap" class="my-auto">
                                        <i class="fas fa-user fa-2x"></i>
                                    </a>
                                    <a asp-controller="KhachHang" asp-action="DangNhap" class="text-white">
                                        <small class="text-white ms-2">Đăng nhập</small>
                                    </a>
                                }
                            </div>



                            </div>

                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->




        <div style="min-height:500px;">
            @RenderBody()

        </div>





        @await Html.PartialAsync("_Footer")
    </div>




    <!-- Back to Top -->
    <a href="#" class="btn btn-primary border-3 border-primary rounded-circle back-to-top">
        <i class="fa fa-arrow-up"></i>
    </a>

    <!-- JavaScript Libraries -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $("#seachButton").click(function () {
                let url = `/HangHoa/Search?query=` + $("#searchText").val();
                window.location.href = url;
            });
        });
    </script>
</body>
</html>
<style>
    .dropdown-menu .hover-item:hover {
        background-color: #d1e7dd;
        color: #000;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .dropdown-menu .dropdown-item {
        font-size: 0.95rem;
    }
</style>