@model IEnumerable<TheGioiDiaMVC.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục sản phẩm</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach(var item in Model)
            {
            <li>
                <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai">
                            <img src="~/Hinh/Loai/cdx.png" alt="Icon" style="width: 20px; height: 20px; margin-right: 5px;">
                            @item.TenLoai
                        </a>

                    <span>(@item.SoLuong)</span>
                </div>
            </li>
            }
        </ul>
    </div>
</div>