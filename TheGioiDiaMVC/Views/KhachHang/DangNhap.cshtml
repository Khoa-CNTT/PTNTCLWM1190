@model TheGioiDiaMVC.ViewModels.DangNhapVM
@{
    ViewData["Title"] = "Đăng nhập";
}
@if (TempData["DangXuatThanhCong"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["DangXuatThanhCong"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
        <h2 class="text-center mb-4">Đăng nhập</h2>
        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="mb-3">
                <label asp-for="@Model.TenDangNhap" class="form-label"></label><sup class="text-danger">*</sup>
                <input asp-for="@Model.TenDangNhap" class="form-control">
                <span asp-validation-for="@Model.TenDangNhap" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.MatKhau" class="form-label"></label><sup class="text-danger">*</sup>
                <input asp-for="@Model.MatKhau" type="password" class="form-control">
                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
            </div>

            <div class="d-grid gap-3 mt-4">
                <button type="submit" class="btn btn-primary text-uppercase">Đăng nhập</button>
                <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="btn btn-outline-danger">Quên mật khẩu?</a>
            </div>
        </form>
    </div>
</div>
