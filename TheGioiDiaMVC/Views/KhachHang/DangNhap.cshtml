@model TheGioiDiaMVC.ViewModels.DangNhapVM
@{
    ViewData["Title"] = "Đăng nhập";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5"
     style="background: linear-gradient(135deg, #1D976C, #93F9B9);">
    <h1 class="text-center text-white display-4"
        style="text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <i class="fas fa-sign-in-alt"></i> Đăng Nhập
    </h1>
    <p class="text-center text-white lead mt-3"
       style="font-size: 1.2rem; font-style: italic;">
        Truy cập tài khoản để khám phá những trải nghiệm tuyệt vời đang chờ bạn!
    </p>
</div>
<!-- Single Page Header end -->
<!-- Login Form -->
<div class="container d-flex justify-content-center align-items-start" style="min-height: 70vh; padding-top: 60px;">
    <div class="card shadow-lg p-5 border-0 rounded-4" style="max-width: 550px; width: 100%;">
        <h3 class="text-center mb-4 text-success fw-bold">
            <i class="fas fa-user-circle"></i> Đăng nhập tài khoản
        </h3>

        <form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="text-danger mb-3" asp-validation-summary="All"></div>

            <div class="mb-3">
                <label asp-for="@Model.TenDangNhap" class="form-label">Tên đăng nhập</label>
                <input asp-for="@Model.TenDangNhap" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập tên đăng nhập">
                <span asp-validation-for="@Model.TenDangNhap" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.MatKhau" class="form-label">Mật khẩu</label>
                <input asp-for="@Model.MatKhau" type="password" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập mật khẩu">
                <span asp-validation-for="@Model.MatKhau" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-3 mt-4">
                <button type="submit" class="btn btn-success rounded-pill text-uppercase fw-bold shadow-sm">
                    <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                </button>
                <a asp-controller="KhachHang" asp-action="QuenMatKhau" class="btn btn-outline-warning rounded-pill">
                    <i class="fas fa-key me-1"></i> Quên mật khẩu?
                </a>
            </div>
        </form>
    </div>
</div>


<!-- Optional styling -->
<style>
    input:focus {
        box-shadow: 0 0 5px rgba(33, 150, 243, 0.5) !important;
        border-color: #2196f3 !important;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #aaa;
    }
</style>
