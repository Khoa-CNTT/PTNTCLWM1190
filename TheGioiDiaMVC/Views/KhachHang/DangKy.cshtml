@model TheGioiDiaMVC.ViewModels.DangKyVM
@{
    ViewData["Title"] = "Đăng ký";
}

<!-- Header -->
<div class="container-fluid page-header py-5"
     style="background: linear-gradient(135deg, #1D976C, #93F9B9);">
    <h1 class="text-center text-white display-4"
        style="text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <i class="fas fa-user-plus"></i> Đăng Ký
    </h1>
    <p class="text-center text-white lead mt-3"
       style="font-size: 1.2rem; font-style: italic;">
        Tạo tài khoản để tham gia cộng đồng yêu nhạc và khám phá CD LOOP!
    </p>
</div>

<!-- Form Đăng Ký -->
<div class="container d-flex justify-content-center align-items-start" style="min-height: 80vh; padding-top: 60px;">
    <div class="card shadow-lg p-5 border-0 rounded-4" style="max-width: 900px; width: 100%;">
        <h3 class="text-center mb-4 text-success fw-bold">
            <i class="fas fa-user-edit"></i> Tạo tài khoản mới
        </h3>

        <form asp-action="DangKy" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="@Model.MaKh" class="form-label fw-semibold">Tên đăng nhập<sup>*</sup></label>
                    <input asp-for="@Model.MaKh" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập tên đăng nhập" />
                    <span asp-validation-for="@Model.MaKh" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.HoTen" class="form-label fw-semibold">Họ tên<sup>*</sup></label>
                    <input asp-for="@Model.HoTen" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập họ tên" />
                    <span asp-validation-for="@Model.HoTen" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.MatKhau" class="form-label fw-semibold">Mật khẩu<sup>*</sup></label>
                    <input asp-for="@Model.MatKhau" type="password" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="@Model.MatKhau" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.NhapLaiMatKhau" class="form-label fw-semibold">Nhập lại mật khẩu<sup>*</sup></label>
                    <input asp-for="@Model.NhapLaiMatKhau" type="password" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập lại mật khẩu" />
                    <span asp-validation-for="@Model.NhapLaiMatKhau" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.DienThoai" class="form-label fw-semibold">Điện thoại<sup>*</sup></label>
                    <input asp-for="@Model.DienThoai" type="tel" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="@Model.DienThoai" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Email" class="form-label fw-semibold">Email<sup>*</sup></label>
                    <input asp-for="@Model.Email" type="email" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập email" />
                    <span asp-validation-for="@Model.Email" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.NgaySinh" class="form-label fw-semibold">Ngày sinh</label>
                    <input asp-for="@Model.NgaySinh" type="date" class="form-control rounded-pill px-3 py-2 shadow-sm" />
                    <span asp-validation-for="@Model.NgaySinh" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Giới tính</label>
                    <div class="d-flex gap-3 align-items-center">
                        <div class="form-check">
                            <input asp-for="@Model.GioiTinh" class="form-check-input" id="gioiTinhNam" />
                            <label class="form-check-label" for="gioiTinhNam">Nam</label>
                        </div>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="nuCheckbox" disabled />
                            <label class="form-check-label" for="nuCheckbox">Nữ</label>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="@Model.DiaChi" class="form-label fw-semibold">Địa chỉ<sup>*</sup></label>
                    <input asp-for="@Model.DiaChi" class="form-control rounded-pill px-3 py-2 shadow-sm" placeholder="Nhập địa chỉ" />
                    <span asp-validation-for="@Model.DiaChi" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label class="form-label fw-semibold">Hình ảnh đại diện<sup>*</sup></label>
                    <input type="file" name="Hinh" class="form-control rounded-pill px-3 py-2 shadow-sm" />
                </div>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-success rounded-pill text-uppercase fw-bold shadow-sm">
                    <i class="fas fa-user-plus me-1"></i> Đăng ký
                </button>

                <div class="text-center mt-3">
                    <small class="text-muted">
                        Bạn đã có tài khoản?
                        <a asp-controller="KhachHang" asp-action="DangNhap" class="text-primary fw-bold text-decoration-none">
                            Đăng nhập tại đây
                        </a>
                    </small>
                </div>
            </div>

        </form>
    </div>
</div>

<!-- Optional styling -->
<style>
    input:focus {
        box-shadow: 0 0 5px rgba(33, 150, 243, 0.5) !important;
        border-color: #2196f3 !important;
    }

    .form-control::placeholder {
        font-style: italic;
        color: #aaa;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var gioiTinhCheckbox = document.getElementById("gioiTinhNam");
        var nuCheckbox = document.getElementById("nuCheckbox");

        function updateNuCheckbox() {
            nuCheckbox.checked = !gioiTinhCheckbox.checked;
        }

        gioiTinhCheckbox.addEventListener("change", updateNuCheckbox);
        updateNuCheckbox();
    });
</script>
